	        <title>Mening keyingi sahifalarim</title>
	    	<meta name="viewport" content="width=device-width, initial-scale=1">
    	</head>
	<body>
	    <p>Bismillahir Rohmanir Rohim.</p>
	    <a href="https://daryo.uz" title="So'ngi yangiliklar">Shu yerga bosing</a>
	    <script>
		var words = [
"programma",
 "makaka", "chiroyli",
 "oladushek"
];


		var word = words[Math.floor(Math.random() * words.length)];


		var answerArray = [];

		for (var i = 0; i < word.length; i++) {
 
			answerArray[i] = "_";

		}

		
var remainingLetters = word.length;

		
var remainErrors = 10;

		
while (remainingLetters > 0 && remainErrors > 0) {
  
			var guess = prompt(("Ugadayte bukvu ili najmite Otmena dlya vixoda - " + answerArray.join(" ") + "  

Popitki - ").toLowerCase() + remainErrors);

		if (guess === null) {
			break;
		} else if (guess.length !== 1) {
			alert("Pojaluysta, vvedite tolko odnu bukvu");
			remainErrors--;
		} else {
			var r = remainingLetters;
			for (var j = 0; j < word.length; j++) {
				if (answerArray[j] === "_" && word[j] === guess) {
					answerArray[j] = guess;
					remainingLetters--;
				}
			}
			if (r === remainingLetters) {
				remainErrors--;
			}
		}
		}
		alert("Otlichno! Bilo zagadano slovo - " + word);
	    </script>
	</body>
</html>
